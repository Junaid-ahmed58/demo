<h1>List of Authors</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Father_name</th>
    <th>Books</th>
    <th></th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.email %></td>
      <td><%= author.father_name %></td>
      <td><%= author.books %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Destroy', author_path(author), data: { "turbo-method": :delete } %></td>
<% end %>
<%= link_to 'New_author', new_author_path %>
</table>
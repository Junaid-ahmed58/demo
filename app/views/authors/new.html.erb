<h1>New person<h1>

<%= form_with model: @author, local: true do |form| %>
 <% if @author.errors.any? %>
    <ul>
      <% @author.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
 
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_area :email %>
  </p>

  <p>
    <%= form.label :father_name %><br>
    <%= form.text_area :father_name %>
  </p>

  <p>
    <%= form.label :books %><br>
    <%= form.text_area :books %>
  </p>

  <p>
    <%= form.submit %>
  </p>
 
<% end %>


<%= link_to 'Back', authors_path %>